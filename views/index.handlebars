<script type="text/javascript" src="/js/utilities/baseAPI.js"></script>

<main role="main">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/addItems">Add</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/table/allItems">All Items</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/table/expiredItems">Expiring</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/table/lowItems">Low Inventory</a>
        </li>

      </ul>
    </div>
  </nav>

  <img src="/images/olivanders2.jpg" class="img-fluid" alt="">

  <div class="container">
    <div class="jumbotron">
      <div class="jumbotron vertical-center">
        <div class="container text-center">
          <h1 id="title" class="display-3">Inventex</h1>
          <h4>
            <p>Keeping track of your inventory!</p>
          </h4>
          <br>
        </div>
      </div>
    </div>

    <p>{{partialName}}</p>
    {{#if partialDashboard}}
    {{> dashboard}}
    {{/if}}
    {{#if addItems}}
    {{> addItems this}}
    {{/if}}
    {{#if updateItems}}
    {{> addItems this}}
    {{/if}}
    {{#if allItemTable}}
    {{> itemTable allItems=true}}
    {{/if}}
    {{#if lowItemTable}}
    {{> itemTable lowItems=true}}
    {{/if}}
    {{#if expiredItemTable}}
    {{> itemTable expiredItems=true}}
    {{/if}}
  </div>
</main>